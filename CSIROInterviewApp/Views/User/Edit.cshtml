@model CSIROInterviewApp.ViewModel.EditViewModel

<div class="container form-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 maindiv">
            <h2 class="text-center mb-4">Edit Student Details</h2>

            <form asp-action="save" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" disabled/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your username" disabled/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GPA" class="control-label"></label>
                    <input asp-for="GPA" class="form-control" type="text" placeholder="Enter your GPA" />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>

                <!-- Course Dropdown -->
                <div class="form-group">
                    <label asp-for="University" class="control-label">University</label>
                    <select asp-for="University" asp-items="@(new SelectList(Model.Universities))" class="form-control">
                        <option value="">Select a University</option>
                    </select>
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>

                <!-- Course Dropdown -->
                <div class="form-group">
                    <label asp-for="SelectedCourse" class="control-label">Course</label>
                    <select asp-for="SelectedCourse" asp-items="@(new SelectList(Model.Courses))" class="form-control">
                        <option value="">Select a Course</option>
                    </select>
                    <span asp-validation-for="SelectedCourse" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverLetterFile" class="control-label"></label><br />
                    <label class="alert alert-success">Current file: @Model.CurrentCoverLetterFilePath</label>
                    <input asp-for="CoverLetterFile" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="CoverLetterFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ResumeFile" class="control-label"></label><br />
                    <label class="alert alert-success">Current file: @Model.CurrentResumeFilePath</label>
                    <input asp-for="ResumeFile" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ResumeFile" class="text-danger"></span>
                </div>

                @* Hidden field *@
                <div>
                    <input asp-for="Id" hidden/>
                    <input asp-for="Email" hidden/>
                    <input asp-for="Username" hidden/>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

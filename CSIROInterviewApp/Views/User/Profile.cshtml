@model CSIROInterviewApp.ViewModel.UserProfileViewModel
@{
    string message = null;
    if (TempData["Message"] is not null)
    {
        message = TempData["Message"] as string;
    }
}

<div class="container form-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 maindiv">
            <h2 class="text-center mb-4 mt-3">Profile</h2>
            
            @if (message is not null)
            {
                <div>
                    <label class="alert alert-success">@message</label>
                </div>
            }

            <form asp-action="Edit" method="get" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" disabled/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your username" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your username" disabled />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GPA" class="control-label"></label>
                    <input asp-for="GPA" class="form-control" type="text" placeholder="Enter your GPA" disabled />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="University" class="control-label"></label>
                    <input asp-for="University" class="form-control" type="text" placeholder="Enter your University" disabled />
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SelectedCourse" class="control-label"></label>
                    <input asp-for="SelectedCourse" class="form-control" type="text" placeholder="Enter your University" disabled />
                    <span asp-validation-for="SelectedCourse" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverLetterFile" class="control-label"></label>
                    <input asp-for="CoverLetterFile" class="form-control" placeholder="Confirm your password" disabled />
                    <span asp-validation-for="CoverLetterFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ResumeFile" class="control-label"></label>
                    <input asp-for="ResumeFile" class="form-control" placeholder="Confirm your password" disabled />
                    <span asp-validation-for="ResumeFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Id" hidden />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

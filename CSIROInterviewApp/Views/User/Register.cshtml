@model CSIROInterviewApp.ViewModel.RegisterViewModel

<div class="container form-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 maindiv">
            <h2 class="text-center mb-4 mt-3">Register</h2>

            <form asp-action="Register" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GPA" class="control-label"></label>
                    <input asp-for="GPA" class="form-control" type="text" placeholder="Enter your GPA" />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="University" class="control-label"></label>
                    <input asp-for="University" class="form-control" type="text" placeholder="Enter your University" />
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>

                <!-- Course Dropdown -->
                <div class="form-group">
                    <label asp-for="SelectedCourse" class="control-label">Course</label>
                    <select asp-for="SelectedCourse" asp-items="@(new SelectList(Model.Courses))" class="form-control">
                        <option value="">Select a Course</option>
                    </select>
                    <span asp-validation-for="SelectedCourse" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverLetterFile" class="control-label"></label>
                    <input asp-for="CoverLetterFile" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="CoverLetterFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ResumeFile" class="control-label"></label>
                    <input asp-for="ResumeFile" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ResumeFile" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

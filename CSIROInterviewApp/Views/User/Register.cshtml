@model CSIROInterviewApp.ViewModel.RegisterViewModel

<!-- Custom Styling for the Form -->
<style>
    /* Full viewport height to center vertically */
    .form-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: lightcyan;
    }

        /* Styling for the form */
        .form-container form {
            font-size: 1.2rem;
            width: 100%; /* Take full width of the column */
        }

        /* Larger font for labels */
        .form-container label {
            font-size: 1.2rem;
            font-weight: bold;
        }

        /* Style for input fields and dropdown */
        .form-container .form-control {
            font-size: 1.2rem;
            margin-top: 20px;
        }

        /* Styling for the submit button */
        .form-container button {
            margin-top: 20px;
            font-size: 1.2rem;
        }

    /* Styling for the main form div */
    .maindiv {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        border: solid 1px #ccc;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Ensuring labels and inputs align on one line */
    .form-group label {
        display: block;
        margin-bottom: 5px;
    }

    /* Making sure the form has equal spacing between elements */
    .form-group {
        margin-bottom: 20px;
    }
</style>

<div class="container form-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 maindiv">
            <h2 class="text-center mb-4">Register</h2>

            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GPA" class="control-label"></label>
                    <input asp-for="GPA" class="form-control" type="text" placeholder="Enter your GPA" />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="University" class="control-label"></label>
                    <input asp-for="University" class="form-control" type="text" placeholder="Enter your University" />
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>

                <!-- Course Dropdown -->
                <div class="form-group">
                    <label asp-for="SelectedCourse" class="control-label">Course</label>
                    <select asp-for="SelectedCourse" asp-items="@(new SelectList(Model.Courses))" class="form-control">
                        <option value="">Select a Course</option>
                    </select>
                    <span asp-validation-for="SelectedCourse" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
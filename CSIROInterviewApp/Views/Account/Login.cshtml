@{
}
@model CSIROInterviewApp.ViewModel.LoginViewModel

<div class="container form-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 maindiv">
            <h2 class="text-center mb-4 mt-3">Login</h2>
            
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    @* <span asp-validation-for="Email" class="text-danger"></span> *@
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
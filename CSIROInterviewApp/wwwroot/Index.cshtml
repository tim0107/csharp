@{
    Layout = null; // Adjust the layout as needed, or remove this if using a default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSIRO Candidate Registration</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css"> <!-- Use ~/ for relative path to your CSS file -->
</head>
<body>
    <div class="container mt-5">
        <header class="text-center mb-4">
            <h1 class="header-title">CSIRO Interview Selection</h1>
            <h2 class="header-subtitle">Machine Learning and Data Science</h2>
        </header>

        <main>
            <!-- Registration Form -->
            <form class="p-4 rounded shadow-sm bg-light">
                <h3 class="form-title text-center mb-4">Candidate Registration Form</h3>

                <!-- Contact Details -->
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your full name">
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>

                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number">
                </div>

                <!-- Course Details -->
                <div class="form-group">
                    <label for="course">Course</label>
                    <select class="form-control" id="course">
                        <option>Diploma of Information Technology</option>
                        <option>Bachelor of Computer Science</option>
                        <option>Master of Data Science</option>
                    </select>
                </div>

                <!-- GPA Details -->
                <div class="form-group">
                    <label for="gpa">GPA</label>
                    <input type="number" step="0.01" class="form-control" id="gpa" placeholder="Enter your GPA (minimum 3.0)">
                </div>

                <!-- University Details -->
                <div class="form-group">
                    <label for="university">University</label>
                    <input type="text" class="form-control" id="university" placeholder="Enter your university name">
                </div>

                <!-- Cover Letter -->
                <div class="form-group">
                    <label for="coverLetter">Cover Letter</label>
                    <textarea class="form-control" id="coverLetter" rows="4" placeholder="Write your cover letter"></textarea>
                </div>

                <!-- Resume Upload -->
                <div class="form-group">
                    <label for="resume">Upload Resume</label>
                    <input type="file" class="form-control-file" id="resume">
                </div>

                <button type="submit" class="btn btn-primary btn-block">Submit Application</button>
            </form>
        </main>
    </div>

    <footer class="text-center mt-5">
        <p>&copy; 2024 CSIRO Interview Selection</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
